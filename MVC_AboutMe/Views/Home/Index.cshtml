@model MVC_AboutMe.Models.AboutModel

<div>
    <h1 align="center">@Model.Name</h1>
    <hr />
    <h2 align="center">Biyografim</h2>
    <p align="center">@Model.Bio</p>
    <hr />
    <h2 align="center">Hobilerim</h2>
    <div style="width:500px;height:200px;border:2px solid #000;margin-left:auto;margin-right:auto;" >
        <ul style="margin-top:50px;margin-left:100px">
            @foreach (var hobby in Model.Hobbies)
            {
                <li>@hobby</li>
            }
        </ul>
    </div>
    
</div>
